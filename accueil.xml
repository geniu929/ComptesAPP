<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8CA5B5"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/nom"
            android:layout_width="270dp"
            android:layout_height="44dp"
            android:layout_weight="0.99"
            android:text="@string/defaut"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/dcnx"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:text="@string/se_d_connecter"
            android:textAlignment="textEnd" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="@string/liste_des_groupes_que_vous_pouvez_rejoindre" />

    <Button
        android:id="@+id/generate"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:backgroundTint="#a7a7a7"
        android:elevation="0dp"
        android:text="@string/cliquer_pour_cr_er_un_nouveau_groupe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ngp"
            android:layout_width="273dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="@string/nom_de_votre_groupe"
            android:inputType="text" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#a7a7a7"
            android:backgroundTint="#a7a7a7"
            android:text="@string/ajouter" />
    </LinearLayout>


    <ListView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="22dp"
        android:layout_weight="0.17"
        android:clickable="true"
        android:focusable="true"
        android:lines="200"
        android:text="@string/test" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/namegroup"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nom_du_groupe"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/acceder"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="#a7a7a7"
            android:text="@string/valider" />


</LinearLayout>
</LinearLayout>


